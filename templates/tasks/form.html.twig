<div class="mb-6">
    <label for="title" class="block mb-2 font-semibold uppercase text-gray-700 text-sm font-medium">Title</label>
    <input type="text" id="title" name="title" {% if task != null %}value="{{ task.title }}"{% endif %} class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="" required>
</div>

<div class="mb-6">
    <label for="description" class="block mb-2 font-semibold uppercase text-gray-700 text-sm font-medium">Description</label>
    <textarea id="description" name="description" rows="4" class="block p-2 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="Task description...">{% if task != null %}{{ task.description }}{% endif %}</textarea>
</div>

<div class="mb-6">
    <div class="inline-block relative w-full">
        <label for="status" class="block mb-2 font-semibold uppercase text-gray-700 text-sm font-medium">Status</label>
        <select class="block appearance-none w-full bg-gray-50 border border-gray-300 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline text-gray-900 text-sm" id="status" name="status">
            {% for status in ['New', 'Open', 'In Progress', 'Done'] %}
                <option value="{{ status }}" {% if task != null and task.status is same as status %} selected {% endif %}>{{ status }}</option>
            {% endfor %}
        </select>
